<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/world</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">letmein</property>
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <!-- DB schema will be updated if needed -->
        <property name="hbm2ddl.auto">update</property>

        <mapping package="com.nazir.customscrum.client.model"/>
        <mapping class="com.nazir.customscrum.client.model.SprintDay"></mapping>
        <mapping class="com.nazir.customscrum.client.model.Sprint"></mapping>
        <mapping class="com.nazir.customscrum.client.model.Task"></mapping>
        <mapping class="com.nazir.customscrum.client.model.Team"></mapping>
        <mapping class="com.nazir.customscrum.client.model.TeamMember"></mapping>
        <mapping class="com.nazir.customscrum.client.model.ScrumMaster"></mapping>
        <mapping class="com.nazir.customscrum.client.model.Developer"></mapping>
        <mapping class="com.nazir.customscrum.client.model.Documentation"></mapping>
    </session-factory>
</hibernate-configuration>
